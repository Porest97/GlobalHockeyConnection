@model IEnumerable<GlobalHockeyConnections.Models.Location>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LocationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationStreetAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationZipCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationCounty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationCountry)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LocationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationStreetAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationCounty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationCountry)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
